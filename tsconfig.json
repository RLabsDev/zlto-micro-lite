{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "noImplicitAny": false,
  "allowJs": true,
  "types": [ "node" ],
  "typeRoots": [ "../node_modules/@types" ],
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
